function gitpull() {
	echo "â–¶ï¸Ž git merge HEAD --no-commit"
	git merge HEAD --no-commit
	if [ "$?" -eq "0" ]; then
		echo "â–¶ï¸Ž git pull"
		git pull
	fi
}

function vaultup() {
	TMP=`pwd`
	if [ -z "~/temp/" ]; then
		echo "â–¶ï¸Ž mkdir ~/temp"
		mkdir ~/temp
	fi
	echo "â–¶ï¸Ž cd ~/git/vetservices-refdata"
	cd ~/git/vetservices-refdata
	echo "â–¶ï¸Ž docker-compose up -d vault"
	docker-compose up -d vault
	printf "â–¶ï¸Ž Let vault start up "
	n=0
	while [[ $n -lt 10 ]]
	do
		printf "."
		sleep 1 >/dev/null 2>&1
		n=$((n+1))
	done
	echo "."
	echo "â–¶ï¸Ž cd ~/temp"
	cd ~/temp
	echo "â–¶ï¸Ž ~/git/ascent-platform/ascent-platform-docker-build/containers/vault/create-cert.sh"
	~/git/ascent-platform/ascent-platform-docker-build/containers/vault/create-cert.sh
	echo "â–¶ï¸Ž pkill \"Keychain Access\""
	pkill "Keychain Access"
	echo "â–¶ï¸Ž ##################################################################"
	echo "â–¶ï¸Ž Import certificate to the \"login\" section, pw=changeit"
	echo "â–¶ï¸Ž Imported certificate name is \"app.internal.vetservices.gov\""
	echo "â–¶ï¸Ž ##################################################################"
	echo "â–¶ï¸Ž open developer.p12"
	open developer.p12
	cd "$TMP"
}

function docrbuild() {
	gitpull
	TMPDIR=`echo "$(pwd)"|grep -o '[^/]\+$'`
	if [ ! -f pom.xml ]; then
		read -p "â–¶ï¸Ž skipping maven build. Press [Enter] to continue, [Ctrl+C] to abort. "
	else
		echo "â–¶ï¸Ž mvn clean install -Ddockerfile.skip=true"
		mvn clean install -Ddockerfile.skip=true
	fi
	if [ "$?" -eq "0" ]; then
		echo "â–¶ï¸Ž find . -name \"Dockerfile\" -execdir docker build -t ascent/$TMPDIR . \;"
		find . -name "Dockerfile" -execdir docker build -t ascent/$TMPDIR . \;
		if [ "$?" -ne "0" ]; then
			echo "â–¶ï¸Ž Docker build failed with $?. Docker image not built."
		fi
	else
		echo "â–¶ï¸Ž Maven build failed. Docker image not built."
	fi
}

# run individual docker container using docker localint
function docrrun() {
	TMP="`pwd`"
	cd docker-compose_local/
	if [ "$?" -eq "0" ]; then
		docker-compose up
	else
		echo "No docker-compose_local/ directory."
	fi
	cd "$TMP"
}

# in service dir; whatever local docker containers, start them
function docrcup() {
	TMPDIR=`echo "$(pwd)"|grep -o '[^/]\+$'`
	TMPFILE="$TMPDIR.dockercompose.log"
	echo "â–¶ï¸Ž docker-compose up"
	touch "$TMPFILE"
	open -a Sublime\ Text "$TMPFILE"
	echo "â–¶ï¸Ž Docker Compose environment is starting. Press [Ctrl+C] to stop..."
	docker-compose up > "$TMPFILE" 2>&1
	echo " "
	echo "â–¶ï¸Ž Docker Compose environment is shutting down, please wiat ..."
	docker-compose down > "$TMPFILE" 2>&1
	read -p "â–¶ï¸Ž Press [Enter] to remove $TMPFILE, or [Ctrl+C] to leave the log file in place."
	echo "rm $TMPFILE"
	rm "$TMPFILE"
}
# delete dangling / orphaned images
alias docrdeldang='
echo "â–¶ï¸Ž docker rmi \$(docker images -f dangling=true -q)";
docker rmi $(docker images -f dangling=true -q);'
# delete all docker images
alias docrdelall='
echo "â–¶ï¸Ž docker rmi \$(docker images -a -q)";
docker rmi $(docker images -a -q);'
# delete all docker images but sonar and etc
alias docrclean='
TMP_DEL="ascent\|rabbitmq\|localstack\|fluentd\|consul\|vault\|redis\|jenkins\|kibana\|elasticsearch";
TMP_KEEP="sonarqube|alpine";
echo "â–¶ï¸Ž docker images -a --format \"{{.ID}}:\t{{.Repository}}\" | grep "$TMP_DEL" | grep -Eiv \"$TMP_KEEP\" |cut -f 1 -d \":\"";
docker rmi -f $(docker images -a --format "{{.ID}}:\t{{.Repository}}" | grep "$TMP_DEL" | grep -Eiv "$TMP_KEEP" |cut -f 1 -d ":");
docker rmi -f $(docker images -f dangling=true -q);'

function rmtarget() {
	echo "â–¶ï¸Ž rm -rf \$(find . -name \'target\' -type d -maxdepth 4 | sed \'s:\.\/::g\')"
	rm -rf $(find . -name 'target' -type d -maxdepth 4 | sed 's:\.\/::g')
}

# bring up docker-demo environment
function demoup() {
	TMP="`pwd`"
	echo "â–¶ï¸Ž ~/git/ascent-platform/ascent-platform-docker-build/run-docker/run-docker start all"
	cd ~/git/ascent-platform/ascent-platform-docker-build/run-docker
	./run-docker start all --build
	echo "â–¶ï¸Ž Running containers..."
	echo "â–¶ï¸Ž docker ps"
	docker ps
	cd "$TMP"
}
# bring down docker-demo environment
function demodn() {
	TMP="`pwd`"
	echo "â–¶ï¸Ž ~/git/ascent-platform/ascent-platform-docker-build/run-docker/run-docker stop all"
	cd ~/git/ascent-platform/ascent-platform-docker-build/run-docker
	./run-docker stop all
	echo "â–¶ï¸Ž docker rmi \$(docker images -f dangling=true -q)"
	docker rmi $(docker images -f dangling=true -q)
	echo "â–¶ï¸Ž Running containers..."
	echo "â–¶ï¸Ž docker ps -a"
	docker ps -a
	cd "$TMP"
}

# start sonar docker container
function sonarstart() {
	TMP="`pwd`"
	#	echo "â–¶ï¸Ž ~/git/ascent-platform/ascent-platform-docker-build/run-docker/run-docker start sonarqube"
	#	cd ~/git/ascent-platform/ascent-platform-docker-build/run-docker
	#	./run-docker start sonarqube
	echo "â–¶ï¸Ž cd ~/git/ascent-platform/ascent-platform-docker-build/run-docker"
	cd ~/git/ascent-platform/ascent-platform-docker-build/run-docker
	echo "â–¶ï¸Ž docker-compose -f ../containers/sonarqube/docker-compose_local/docker-compose.yml up --build -d"
	docker-compose -f ../containers/sonarqube/docker-compose_local/docker-compose.yml up --build -d
	printf "â–¶ï¸Ž Waiting for sonar to become available "
	n=0
	while [[ $n -lt 20 ]]
	do
		printf "."
		# if curl --output /dev/null --silent --head --fail "http://localhost:9000"; then echo "URL exists: $url"; else echo "URL does not exist: $url"; fi
		curl --head --fail "http://localhost:9000" > /dev/null 2>&1
		if [ "$?" -ne "0" ]; then
			sleep 1 >/dev/null 2>&1
			n=$((n+1))
		elif [[ $n -lt 3 ]]; then
			n=20
		else
			sleep 2 >/dev/null 2>&1
			printf "."
			sleep 2 >/dev/null 2>&1
			printf "."
			n=20
		fi
	done
	sleep 1 >/dev/null 2>&1
	echo "."
	sleep 1 >/dev/null 2>&1
	echo "â–¶ï¸Ž Running containers:"
	docker ps -a | grep sonar
	echo "â–¶ï¸Ž To run analysis: $ mvn sonar:sonar"
	cd "$TMP"
}
# stop sonar docker container
function sonarstop() {
	TMP="`pwd`"
	echo "â–¶ï¸Ž ~/git/ascent-platform/ascent-platform-docker-build/run-docker/run-docker stop sonarqube"
	cd ~/git/ascent-platform/ascent-platform-docker-build/run-docker
	./run-docker stop sonarqube
	echo "â–¶ï¸Ž Running containers..."
	docker ps -a | grep sonar
	cd "$TMP"
}
# remove all sonar history
function sonarclean() {
	TMP="`pwd`"
	echo "â–¶ï¸Ž ~/git/ascent-platform/ascent-platform-docker-build/run-docker/run-docker stop sonarqube -clean";
	cd ~/git/ascent-platform/ascent-platform-docker-build/run-docker;
	./run-docker stop sonarqube -clean;
	cd "$TMP"
}
#echo "created sonar aliases"

# remove fortify history for current project
