#######################################################
## GENERIC DOCKER OPERATIONS (not Ascent operations) ##
#######################################################

### delete dangling / orphaned images
alias docrdeldang='
echo "â–¶ï¸Ž docker rmi \$(docker images -f dangling=true -q)";
docker rmi $(docker images -f dangling=true -q);'

### delete all docker images
function docrdelall() {
	echo "â–¶ï¸Ž docker stop \$(docker ps -q)"
	docker stop $(docker ps -q)
	echo "â–¶ï¸Ž docker rmi \$(docker images -a -q)"
	docker rmi -f $(docker images -a -q);
}

### delete all docker images except sonar and alpine
alias docrclean='
TMP_KEEP="sonarqube|alpine|postgres";
echo "â–¶ï¸Ž docker rmi -f \$(docker images -a --format \"{{.ID}}:\\t{{.Repository}}\" | grep -Eiv \"sonarqube|alpine|postgres\" | cut -f 1 -d \":\")";
docker rmi -f $(docker images -a --format "{{.ID}}:\t{{.Repository}}" | grep -Eiv "sonarqube|alpine|postgres" | cut -f 1 -d ":");
docker rmi -f $(docker images -f dangling=true -q);'



