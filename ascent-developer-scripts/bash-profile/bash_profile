### show a categorized list of available aliases/functions
function showaliases() {
	echo ""
	echo "Available aliases:"
	echo "  showaliases  Â» show this list"
	echo "Java config:"
	echo "  ipv4         Â» allow only v4 addresses"
	echo "  ipv6         Â» allow v6 addresses also"
	echo "Git & Git Hub:"
	echo "  gitpull      Â» do a merge-safe pull"
	echo "Maven operations:"
	echo "  m2govcloud   Â» switch maven nexus to gov.cloud configuration"
	echo "  m2evss       Â» switch maven nexus to EVSS configuration"
	echo "  m2clean      Â» delete nexus-provided artifacts from ~/.m2/repository"
	echo "                 except for: com/hpe**"
	echo "  rmtarget     Â» remove all '**/target/' dirs under current dir"
	echo "  versions     Â» run the Versions developer tool"
	echo "Sonar operations:"
	echo "  sonarstart   Â» start the sonar server"
	echo "  sonarstop    Â» stop the sonar server"
	echo "  sonarclean   Â» clean out sonar history"
	echo "Fortify operations:"
	echo "  fortifyclean Â» clean FPR for current dir for current dir"
	echo "  fortifyscan  Â» scan the current dir for current dir"
	echo "Docker generic operations:"
	echo "  docrclean    Â» remove all but sonar images (incl dangling)"
	echo "  docrdelall   Â» delete all images"
	echo "  docrdeldang  Â» delete dangling images"
	echo "Ascent helpers"
	echo "  docrbuild    Â» build the docker image in the current project"
	echo "  docrcup      Â» run docker-demo for the current project directory"
	echo "  perftest     Â» run perftest for the current *-perftest project"
	echo "  review       Â» run maven build, sonar and fortify for current dir"
	echo "  sboot        Â» run the springboot microservice in current dir"
	echo "  vaultCerts   Â» get the certs package from vault"
	echo ""
}

